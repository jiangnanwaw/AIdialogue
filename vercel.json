{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "DEEPSEEK_API_KEY": "@deepseek-api-key",
    "DB_USER": "@db-user",
    "DB_PASSWORD": "@db-password",
    "DB_SERVER": "@db-server",
    "DB_DATABASE": "@db-database"
  }
}
